
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<style>
</style>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
</head>
<body class="bg-light">
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="row justify-content-center w-100">
            <div class="col-md-6 col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center mt-3">
                            <a href="#">
                                <span><img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ1XjPzv9oUTzkX8MFdyICF0E691cm8hP4NvQ&s" alt="200" height="200"></span>
                            </a>
                        </div>
                        <form action="@Url.Content("~/Login/Index")" method="post" class="p-2">
                            <div class="form-group">
                                <label for="emailaddress">Email</label>
                                <input class="form-control" type="email" name="ema_usu" required autocomplete="off">
                            </div>
                            <div class="mb-3"></div>
                            <div class="form-group">
                                <label for="password">Contraseña</label>
                                <input class="form-control" type="password" required name="con_usu" autocomplete="off">
                            </div>
                            <div class="mb-3"></div>
                            <div class="mb-3 text-center">
                                <button class="btn btn-primary btn-block" type="submit">Ingresar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

