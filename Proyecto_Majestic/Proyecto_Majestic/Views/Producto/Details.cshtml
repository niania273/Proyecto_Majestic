@model Proyecto_Majestic.Producto

@{
    ViewBag.Title = "Details";
}

<h2>Ver Producto</h2>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nom_prod)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nom_prod)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.stock_max_prod)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.stock_max_prod)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.stock_min_prod)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.stock_min_prod)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.prec_list_prod)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.prec_list_prod)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.cap_bat)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cap_bat)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.est_prod)
        </dt>

        @if (Model.est_prod == true)
        {
            <dd>Habilitado</dd>
        }
        else
        {
            <dd>Deshabilitado</dd>
        }

        <dt>
            Categoría
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria.nom_cat)
        </dd>

        <dt>
            Marca
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Marca.nom_mar)
        </dd>

    </dl>
</div>
<p>
    <div class="mb-3"></div>
    <div>
        @Html.ActionLink("Actualizar", "Edit", new { id = Model.cod_prod }, new { @class = "btn btn-primary" })
    </div>
    <div class="mb-3"></div>
    <div>
        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</p>
